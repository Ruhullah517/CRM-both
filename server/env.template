# Server Configuration Template
# Copy this file to .env and fill in your actual values
# 
# Windows: copy env.template .env
# Mac/Linux: cp env.template .env

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Server Environment
NODE_ENV=production
PORT=5000

# URLs (‚≠ê CHANGE THESE FOR YOUR DEPLOYMENT)
FRONTEND_URL=http://crm.blackfostercarersalliance.co.uk
SERVER_URL=http://backendcrm.blackfostercarersalliance.co.uk

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret (Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_secure_random_jwt_secret_here

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=blackfostercarersalliance@gmail.com
SMTP_PASS=your_gmail_app_password_here
SMTP_FROM=Black Foster Carers Alliance <blackfostercarersalliance@gmail.com>

# ===========================================
